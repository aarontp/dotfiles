# i3status configuration file.
# see "man i3status" for documentation.

general {
    colors = true
    interval = 5
    color_separator = "#00E1FF"
    # This is still the crucial line for Pango markup
    markup = "pango"
}

# The order of the modules on the status line
order += "wireless _first_"
order += "ethernet _first_"
order += "disk /"
order += "load"
order += "tztime sydney"
order += "tztime utc"
order += "tztime zurich"
order += "tztime local"
order += "battery all"


battery all {
    #format = "<span weight='bold'>Battery:</span> <span foreground='%color'>%status %percentage (%remaining)</span>"
    format = "<span weight='bold'>Batt:</span>%status %percentage (%remaining)"

    status_chr = "⚡"
    status_bat = "🔋"
    status_unk = "❓Unknown"
    status_full = "✅Full"
    low_threshold = 15
    threshold_type = "time"
}

wireless _first_ {
    format_up = "<span foreground='#4CFF33'>📡 </span><span weight='bold'>WLAN:</span> <span foreground='#FFFFFF'>%essid (%quality) %ip</span>"
    format_down = "<span foreground='#FF3333'>📡 </span><span weight='bold'>WLAN:</span> <span foreground='#FFFFFF'>down</span>"
}

ethernet _first_ {
    format_up = "<span foreground='#4CFF33'>🌐 </span><span weight='bold'>ETH:</span> <span foreground='#FFFFFF'>%ip (%speed)</span>"
    format_down = "<span foreground='#FF3333'>🌐 </span><span weight='bold'>ETH:</span> <span foreground='#FFFFFF'>down</span>"
}

disk "/" {
    format = "<span foreground='#8C79C9'>💾 </span><span weight='bold'>Root:</span> <span foreground='#FFFFFF'>%avail</span>"
}

load {
    format = "<span foreground='#FFC107'>📈 </span><span weight='bold'>Load:</span> <span foreground='#FFFFFF'>%1min %5min</span>"
}

memory {
    format = "<span foreground='#E04242'>🧠 </span><span weight='bold'>Mem:</span> <span foreground='#FFFFFF'>%used/%total</span>"
}

tztime local {
    format = "<span foreground='#e6f78d' weight='bold'>🗓️ %Y-%m-%d %H:%M:%S</span>"
}

tztime zurich {
    format = "<span foreground='#e6f78d'>🇨🇭 ZRH: %H:%M</span>"
    timezone = "Europe/Zurich"
}

tztime utc {
    format = "<span foreground='#e6f78d' weight='bold'>🌐 UTC: %H:%M</span>"
    timezone = "Etc/UTC"
}

tztime sydney {
    format = "<span foreground='#e6f78d'>🇦🇺 SYD: %H:%M</span>"
    timezone = "Australia/Sydney"
}
